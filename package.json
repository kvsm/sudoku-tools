{
  "name": "sudoku-tools",
  "version": "1.0.0",
  "description": "Algorithms and a basic API for solving sudoku puzzles logically.",
  "main": "index.js",
  "scripts": {
    "test": "ava --verbose",
    "coverage": "nyc --all --reporter=html npm test && xdg-open ./coverage/index.html",
    "build": "babel src --out-dir lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvsm/sudoku-tools.git"
  },
  "keywords": [
    "sudoku",
    "solver",
    "puzzle"
  ],
  "author": "https://github.com/kvsm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kvsm/sudoku-tools/issues"
  },
  "homepage": "https://github.com/kvsm/sudoku-tools#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.9.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-standard": "^2.0.1",
    "istanbul-reports": "^1.0.0",
    "nyc": "^9.0.1",
    "tap-nyan": "0.0.2"
  },
  "dependencies": {
    "ramda": "^0.22.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "sourceMaps": "inline"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "test/**/*.spec.js"
    ]
  }
}
